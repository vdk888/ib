# Uncle Stock Portfolio System - Production Environment Configuration
#
# This file contains production-ready environment variable templates
# Copy this to .env and fill in your actual values for production deployment

# Uncle Stock API Configuration
UNCLE_STOCK_USER_ID=your_user_id_here

# Interactive Brokers Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=4002                      # Paper trading: 4002, Live trading: 4001
IBKR_CLIENT_ID=1

# Telegram Bot Configuration (for notifications)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_ENABLED=true
TELEGRAM_TIMEOUT=10

# Application Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false
TZ=Europe/Paris

# Portfolio Configuration (optional overrides)
PORTFOLIO_MAX_RANKED_STOCKS=30
PORTFOLIO_MAX_ALLOCATION=0.10

# Security (generate random values for production)
SECRET_KEY=generate_a_random_secret_key_here
API_SECRET=generate_another_random_secret_here

# Database (if using external database in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/uncle_stock_portfolio

# Optional: External Services
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=your_sentry_dsn_for_error_tracking